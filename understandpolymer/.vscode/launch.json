{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run wct",
      "program": "wct",
      "args": [
        "-p",
        "--skip-plugin",
        "local",
        "--plugin",
        "none",
        "--webserver-port",
        "2000",
        "--expanded",
        "--simpleOutput",
        "path/to/tests"
      ]
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Run chrome for wct",
      "url": "http://localhost:2000/components/fake-element/generated-index.html",
      "webRoot": "${workspaceRoot}",
      "userDataDir": "${workspaceRoot}/.vscode/chrome"
    }
  ]
}